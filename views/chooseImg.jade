img(id="fileInputTrigger", src="resources/images/icons/add.png", alt="send image")

.container.chooseImgPopup(id="chooseImg" hidden)
    .row
        input(type="file" accept="image/*" id="fileInput" style="display:none" hidden)
        br
        div.centered(id="img_prev")
            //img.x(src='resources/images/icons/x.png', alt='close icon', id="img_prev_close")
            a(id="prev_link" href="#" data-featherlight="image")
                img(id="prev_img" style="max-width:400px; max-height:400px;" alt="image")
            br
            label(id="prev_name")
            br
            .row
                .col-md-6
                    a.btn.btn-chooseImg.btn-white(id="a_prev_cancel" ) #{__('GENERAL.CANCEL')}
                .col-md-6
                    a.btn.btn-chooseImg.btn-green(id="a_prev_send" ) #{__('GENERAL.SEND')}