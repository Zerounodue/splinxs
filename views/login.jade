img#x-login-img.x(src='resources/images/icons/x.png', alt='close icon')
center
  .container
    .loginRegisterForm
      h1 #{texts.LOGIN.LOGIN}
      //p.lead __Say something worthwhile here.
      p.lead #{texts.LOGIN.LOGIN_MESSAGE}
      if loginError == "ERROR_MESSAGE"
        .alert.alert-green(role="alert")
          |#{texts.LOGIN.ERROR_MESSAGE}

      form.form-signin(role='form', action="/index",method="post", style='max-width: 300px;')

        input.form-control.inputTop(maxlength="40" type='text', name="username", placeholder='#{texts.LOGIN.USERNAME}', required, autofocus, value='#{username ? username : ""}')
        input.form-control.inputBottom(maxlength="40" type='password', name="password", placeholder='#{texts.LOGIN.PASSWORD}', required)
        .row.row-login
          .col-xs-6
            button.btn.btn-green.btn-login(type='submit') #{texts.GENERAL.SUBMIT}
          .col-xs-6
            a#btn-close-login.btn.btn-white.btn-login #{texts.GENERAL.CANCEL}
        .row
          .col-xs-6
            a(href="/guidePassword") #{texts.LOGIN.FORGOT}
          .col-xs-6
            a#a-register #{texts.LOGIN.SIGN_UP}
            //a(href="/register") __Sign up now!

